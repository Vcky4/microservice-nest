{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "monorepo": true,
  "projects": {
    "auth-microservice": {
      "type": "application",
      "root": "apps/auth-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/auth-microservice/src",
      "compilerOptions": {
        "deleteOutDir": true
      }
    },
    "item-microservice": {
      "type": "application",
      "root": "apps/item-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/item-microservice/src",
      "compilerOptions": {
        "deleteOutDir": true
      }
    }
  }
}

